public class Launch {
	public static void main(String[] args) {
		int n = 4;
		// upper half
		for (int i=1;i<=n;i++) {
			// first half
			for (int j=1 ;j<=i;j++) {
				System.out.print("*");
			}
			//space
			int spaces= 2*(n-i);
			for (int j=1;j<=spaces;j++) {
				System.out.print(" ");
			}
			//2nd half
			for (int j=1;j<=i;j++) {
				System.out.print("*");
			}
			System.out.println();
		}
		//lower half
		for (int i=n;n>=1;i--) {
			// first half
			for (int j=1 ;j<=i;j++) {
				System.out.print("*");
			}
			//space
			int spaces= 2*(n-i);
			for (int j=1;j<=spaces;j++) {
				System.out.print(" ");
			}
			//2nd half
			for (int j=1;j<=i;j++) {
				System.out.print("*");
			}
			System.out.println();
		}
	}
}
